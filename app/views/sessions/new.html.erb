<div class="depot_form">
	<%= form_tag sessions_path do %>
		<fieldset>
			<legend>Please Log In</legend>
			
			<div>
				<label for="name">Name:</label>
				<%= text_field_tag :name %>
			</div>
			
			<div>
				<label for="password">Password:</label>
				<%= password_field_tag :password %>
			</div>
			
			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>
</div>